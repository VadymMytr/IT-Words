<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ITWords" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorAccentPressed</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <!-- Buttons -->
    <style name="BtnStyle" parent="Widget.AppCompat.Button">
        <item name="android:layout_height">64dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/selector_text_white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">8sp</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="BtnStyle.AppPrimary" parent="BtnStyle">
        <item name="android:background">@drawable/selector_btn_primary</item>
    </style>

    <style name="BtnStyle.AppPrimary.Green" parent="BtnStyle">
        <item name="android:background">@drawable/selector_btn_green</item>
    </style>

    <style name="BtnStyle.Outline" parent="BtnStyle">
        <item name="android:background">@drawable/selector_btn_outline_primary</item>
        <item name="android:textColor">@drawable/selector_text_primary</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:padding">8sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="BtnStyle.Outline.White.Small" parent="BtnStyle">
        <item name="android:background">@drawable/selector_btn_outline_white</item>
        <item name="android:textColor">@drawable/selector_text_white</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:paddingVertical">4sp</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!-- /Buttons -->

    <!-- Images -->
    <style name="ImgStyle.Circle" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ImgStyle.Rounded" parent="">
        <item name="cornerSize">20dp</item>
    </style>

    <style name="ImgStyle.RoundedTop" parent="">
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
    </style>
    <!-- /Images -->

    <!-- Tab Layout -->
    <style name="TabStyle" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="textAllCaps">false</item>
    </style>
    <!-- /Tab Layout -->
</resources>